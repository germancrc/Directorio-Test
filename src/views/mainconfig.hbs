<div id="content">
  <!-- Campo oculto para almacenar el código de propiedad -->
  <input type="hidden" id="codigoPropiedad" value="{{codigoPropiedad}}">
  <div class="d-flex justify-content-center align-items-center text-center mb-4">
    <h1 class="mt-1">
      {{pageTitle}}
    </h1>
  </div>
  <main class="container fade-in">
    <hr>
    <h3 class="mb-4">Extensiones</h3>
<div class="row">
  <!-- Tarjeta: Total Extensiones -->
  <div class="col mb-4">
    <a href="/extensiones" class="text-decoration-none">
      <div class="card card-menu-main shadow h-100">
        <div class="card-body d-flex">
          <!-- Columna 1: Icono y título -->
          <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
            <i class="bi bi-telephone mb-1" style="font-size: 4rem"></i>
            <h5 class="card-title mb-3">TOTAL</h5>
          </div>
          <!-- Columna 2: El número -->
          <div class="d-flex justify-content-center align-items-center col-6">
            <p class="card-text card-title" style="font-size: 5rem">{{totalExtensiones}}</p>
          </div>
        </div>
      </div>
    </a>
  </div>

  <!-- Tarjeta: Extensiones Activas -->
  <div class="col mb-4">
    <div class="card card-menu shadow text-decoration-none">
      <div class="card-body d-flex">
        <!-- Columna 1: Icono y título -->
        <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
          <i class="bi bi-telephone-inbound mb-1" style="font-size: 4rem"></i>
          <h5 class="card-title mb-3">ACTIVAS</h5>
        </div>
        <!-- Columna 2: El número -->
        <div class="d-flex justify-content-center align-items-center col-6">
          <p class="card-text" style="font-size: 5rem">{{totalExtActivas}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tarjeta: Extensiones Inactivas -->
  <div class="col mb-4">
    <div class="card card-menu shadow text-decoration-none">
      <div class="card-body d-flex">
        <!-- Columna 1: Icono y título -->
        <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
          <i class="bi bi-telephone-x mb-1" style="font-size: 4rem"></i>
          <h5 class="card-title mb-3">INACTIVAS</h5>
        </div>
        <!-- Columna 2: El número -->
        <div class="d-flex justify-content-center align-items-center col-6">
          <p class="card-text" style="font-size: 5rem">{{totalExtInactivas}}</p>
        </div>
      </div>
    </div>
  </div>
</div>


{{!-- cambios --}}
<h3 class="mb-4" id="cambiosExt">Últimas Extensiones Actualizadas</h3>
<div class="card shadow px-3 py-3 mb-4">
  <div id="loader" class="text-center">
    <div class="spinner-border" role="status">
      <span class="visually-hidden">Cargando...</span>
    </div>
  </div>
  <table id="cambios" class="table table-striped" style="width:100%">
    <thead></thead>
    <tbody class="table-group-divider"></tbody>
    <tfoot></tfoot>
  </table>
</div>
  
    {{#if (eq role "admin")}}
    <hr>
    <!-- Tarjetas para Usuarios (solo si el rol es admin) -->
    <h3 class="mb-4">Usuarios</h3>
<div class="row">
  <!-- Tarjeta: Total Usuarios -->
  <div class="col mb-4">
    <a href="/usuarios" class="text-decoration-none">
      <div class="card card-menu-main shadow h-100">
        <div class="card-body d-flex">
          <!-- Columna 1: Icono y título -->
          <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
            <i class="bi bi-people mb-1" style="font-size: 4rem"></i>
            <h5 class="card-title mb-3">TOTAL</h5>
          </div>
          <!-- Columna 2: El número -->
          <div class="d-flex justify-content-center align-items-center col-6">
            <p class="card-text card-title" style="font-size: 5rem">{{totalUsuarios}}</p>
          </div>
        </div>
      </div>
    </a>
  </div>

  <!-- Tarjeta: Usuarios Activos -->
  <div class="col mb-4">
    <div class="card card-menu shadow text-decoration-none">
      <div class="card-body d-flex">
        <!-- Columna 1: Icono y título -->
        <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
          <i class="bi bi-person-check mb-1" style="font-size: 4rem"></i>
          <h5 class="card-title mb-3">ACTIVOS</h5>
        </div>
        <!-- Columna 2: El número -->
        <div class="d-flex justify-content-center align-items-center col-6">
          <p class="card-text" style="font-size: 5rem">{{totalUserActivos}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tarjeta: Usuarios Inactivos -->
  <div class="col mb-4">
    <div class="card card-menu shadow text-decoration-none">
      <div class="card-body d-flex">
        <!-- Columna 1: Icono y título -->
        <div class="d-flex flex-column justify-content-center align-items-center text-center col-6">
          <i class="bi bi-person-slash mb-1" style="font-size: 4rem"></i>
          <h5 class="card-title mb-3">INACTIVOS</h5>
        </div>
        <!-- Columna 2: El número -->
        <div class="d-flex justify-content-center align-items-center col-6">
          <p class="card-text" style="font-size: 5rem">{{totalUserInactivos}}</p>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
{{/if}}

</main>

</div>